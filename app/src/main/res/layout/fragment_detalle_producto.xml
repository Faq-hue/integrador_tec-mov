<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetalleProductoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        tools:ignore="ExtraText">


        <TextView
            android:id="@+id/nombreProductoListaIndividual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/producto"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/imagenProductoIndividual"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/producto"
            tools:srcCompat="@drawable/producto" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precio"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/disponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sin existencias"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/descripcionDetalleProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/lorem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="TextView" />
        </LinearLayout>

        <Button
            android:id="@+id/buyNowButton"
            android:layout_width="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"
            android:text="Buy now" />

        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_blacker"
            android:text="Add to cart"
            android:textColor="@color/black" />


    </LinearLayout>
</FrameLayout>